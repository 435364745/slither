{
  "name": "slither",
  "version": "1.0.0",
  "description": "slither game",
  "main": "main.js",
  "scripts": {
    "build": "npm run lint && npm run release",
    "lint": "./node_modules/.bin/eslint ./src/**/*.js",
    "dev": "concurrently \"node server.js\" \"node socket.js\"",
    "release": "webpack --config ./webpack.dist.js --progress",
    "test": "./node_modules/.bin/mocha ./test/*.test.js --compilers js:babel-core/register --recursive --reporter spec"
  },
  "keywords": [
    "game",
    "slither"
  ],
  "dependencies": {
    "eventemitter3": "^1.2.0",
    "stats.js": "^0.16.0",
    "ws": "^1.1.1"
  },
  "author": "wanghx",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "concurrently": "^3.1.0",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.6.0",
    "eslint-plugin-jsx-a11y": "^1.0.3",
    "eslint-plugin-react": "^5.0.1",
    "mocha": "^2.4.5",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.8.2"
  }
}
